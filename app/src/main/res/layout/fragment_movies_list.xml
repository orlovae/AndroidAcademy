<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/movie_details_background">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_back_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_view_icon_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_back_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_back_horizontal"
        app:srcCompat="@drawable/ic_target" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_title"
        style="@style/TitleMovieList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/movie_list"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_back_horizontal"
        app:layout_constraintStart_toEndOf="@+id/image_view_icon_target"
        app:layout_constraintTop_toTopOf="@+id/guideline_back_horizontal" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="170dp"
        android:layout_height="296dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/card_view_background"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_back_horizontal"
        app:strokeColor="@color/card_view_border"
        app:strokeWidth="1dp"
        android:theme="@style/Theme.MaterialComponents.Light">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrain_layout_card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_view_cover_border">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_card_view_horizontal_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.067567568" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_card_view_horizontal_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.837837838" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view_card_view_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintBottom_toBottomOf="@id/guideline_card_view_horizontal_bottom"
                app:srcCompat="@drawable/card_view_cover_gradient" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_card_view_rating"
                style="@style/TitleMovieList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:alpha="0.9"
                android:background="@drawable/text_view_car_view_top"
                android:padding="4dp"
                android:text="@string/RARS"
                app:layout_constraintBottom_toBottomOf="@id/guideline_card_view_horizontal_top"
                app:layout_constraintStart_toStartOf="@id/constrain_layout_card_view"
                app:layout_constraintTop_toTopOf="@id/guideline_card_view_horizontal_top" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:alpha="0.75"
                app:layout_constraintBottom_toBottomOf="@id/guideline_card_view_horizontal_top"
                app:layout_constraintEnd_toEndOf="@id/constrain_layout_card_view"
                app:layout_constraintTop_toTopOf="@id/guideline_card_view_horizontal_top"
                app:srcCompat="@drawable/ic_like" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_tag"
                style="@style/TagMovieDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="22dp"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:includeFontPadding="false"
                android:text="@string/tag"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@id/image_view_card_view_background"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/guideline_rating_horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/text_view_tag" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/star_01"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="6dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@id/guideline_rating_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline_rating_horizontal"
                app:srcCompat="@drawable/star_icon" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/star_02"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="2dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@id/guideline_rating_horizontal"
                app:layout_constraintStart_toEndOf="@id/star_01"
                app:layout_constraintTop_toTopOf="@+id/guideline_rating_horizontal"
                app:srcCompat="@drawable/star_icon" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/star_03"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="2dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@id/guideline_rating_horizontal"
                app:layout_constraintStart_toEndOf="@id/star_02"
                app:layout_constraintTop_toTopOf="@+id/guideline_rating_horizontal"
                app:srcCompat="@drawable/star_icon" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/star_04"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="2dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@id/guideline_rating_horizontal"
                app:layout_constraintStart_toEndOf="@id/star_03"
                app:layout_constraintTop_toTopOf="@+id/guideline_rating_horizontal"
                app:srcCompat="@drawable/star_icon" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/star_05"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="2dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="@id/guideline_rating_horizontal"
                app:layout_constraintStart_toEndOf="@id/star_04"
                app:layout_constraintTop_toTopOf="@+id/guideline_rating_horizontal"
                app:srcCompat="@drawable/star_icon_empty" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_rating"
                style="@style/RatingMovieDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:includeFontPadding="false"
                android:text="@string/rating"
                android:textAllCaps="true"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@id/guideline_rating_horizontal"
                app:layout_constraintStart_toEndOf="@id/star_05"
                app:layout_constraintTop_toTopOf="@+id/guideline_rating_horizontal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_card_view_title"
                style="@style/TitleMovieDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:includeFontPadding="false"
                android:text="@string/title"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_view_card_view_background" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_card_view_long"
                style="@style/LongMovieList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:includeFontPadding="false"
                android:text="@string/long_movie"
                android:textAllCaps="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_card_view_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>