        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="BackMovieDetails">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="RARSMovieDetails" parent="BackMovieDetails">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TitleMovieDetails" parent="RARSMovieDetails">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#ECECEC</item>
    </style>
    <style name="TagMovieDetails" parent="BackMovieDetails">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FF3466</item>
    </style>
    <style name="RatingMovieDetails" parent="BackMovieDetails">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#6D6D80</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="StoryLineMovieDetails" parent="BackMovieDetails">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ECECEC</item>
